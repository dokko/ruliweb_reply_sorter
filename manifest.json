{
  "manifest_version": 3,
  "name": "Ruliweb Reply Sorter",
  "version": "0.0.1",
  "description": "Extract links with >=10 comments, sort by replies, and show as a left-top half-screen overlay in ruliweb.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Reply Sorter",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["activeTab"],
  "commands": {
    "toggle-reply-overlay": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Toggle the reply sorter overlay"
    }
  },
  "background": { "service_worker": "background.js" }
}
